<%= render 'form', post: Post.new %>
<%= form_for(@post) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :content %>
  <%= f.text_area :content %>

    <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name, include_blank: true)  %>



  <%= f.fields_for(:categories, @post.categories.build) do |category_builder| %>
    <%= category_builder.text_field :name %>
  <% end %>

<%= f.submit%>
<%end%>
